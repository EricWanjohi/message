{{#if updateQuestion}}
  <div class="question-form">
    <h3>Update Question</h3>
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="notes">Question</label>
        {{input value=notes placeholder=question.question}}
      </div>
      <button class="btn btn-success"{{action 'update'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success"{{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}

{{yield}}
