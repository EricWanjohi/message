{{#if addNewAnswer}}
  <div class="question-form">
    <h3>New Answer</h3>
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="answer">Your Answer</label>
        {{textarea class="form-control" value=answer rows="5" id="answer"}}
      </div>
      <button class="btn btn-success"{{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success"{{action 'answerFormShow'}}>Answer the Question</button>
{{/if}}



{{yield}}
