{{#if addNewQuestion}}
<div class="container questoin-form">
  <h3>Ask your question</h3>
  <hr>
  <form method="post">
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author id="author"}}
    </div>
    <br>
    <div class="form-group">
      <label for="question">Question</label>
      {{textarea class="form-control" rows="5" value=notes id="notes"}}
    </div>
    <br>
    <button class="btn btn-success"{{action 'saveQuestion'}}>Save</button>
  </form>
</div>
<br>
{{else}}
<button class="btn btn-info"{{action 'questionFormShow'}}>Ask Question</button>
{{/if}}




{{yield}}
